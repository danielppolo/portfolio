<div class="container">
  <div class="admin">
    <div class="new-post">
      <h1>new story</h1>
      <%= simple_form_for @story do |f| %>
      <%= f.input :title, placeholder: 'story title' %>
      <%= f.input :author, placeholder: 'who wrote it?' %>
      <%= f.input :categories, placeholder: 'categories w/commas' %>
      <%= f.input :content, placeholder: 'begin writting...' %>
      <!--%= f.input :cover, as: :file, label: 'upload cover picture' %-->
      <!--%= f.input :images, as: :file, label: 'upload pictures', multiple: true %-->
      <%= f.input :cover do %>
        <%= f.file_field :cover, direct_upload: true %>
      <% end %>
      <%= f.input :images do %>
        <%= f.file_field :images, multiple: true, direct_upload: true %>
      <% end %>
      <%= f.submit 'post story' %>
      <% end %>
    </div>
  </div>
</div>
